<?xml version="1.0" encoding="UTF-8"?>
<eventFormatter name="chartBallInStreamEventFormatterSoap"
  statistics="disable" trace="disable" xmlns="http://wso2.org/carbon/eventformatter">
  <from streamName="chartBallInStream" version="1.0.0"/>
  <mapping customMapping="enable" type="xml">
    <inline>
      <ser:notifyBallPositionEvent xmlns:ser="http://service.axis2.wso2.com">
        <ser:event>{{ball_position}}</ser:event>
      </ser:notifyBallPositionEvent>
    </inline>
  </mapping>
  <to eventAdaptorName="TestServiceSOAPEventAdaptor" eventAdaptorType="soap">
    <property name="username">admin</property>
    <property name="password">admin</property>
    <property name="url">http://localhost:9763/services/GameVisualizationService</property>
  </to>
</eventFormatter>
